<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Foto da receita -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pao" />

    <!-- Nome da receita -->
    <TextView
        android:id="@+id/recipe_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Nome da Receita"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Lista de ingredientes -->
    <TextView
        android:id="@+id/ingredients_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Ingredientes:"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ingredients_list_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrediente 1\nIngrediente 2\nIngrediente 3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Modo de preparo -->
    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Modo de Preparo:"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passo 1: ...\nPasso 2: ...\nPasso 3: ..."
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Porções -->
    <TextView
        android:id="@+id/servings_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Porções:"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/servings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 porções"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Ícone de favoritar -->
    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />

</LinearLayout>
